@page  
@model IndexModel
@section Scripts {
     <script src="~/js/list-tickets.js"></script>
}
@{
    ViewData["Title"] = "Ticket List";
}
  <section>
    <table>
      <thead>
        <tr>
          <th>Ticket #</th>
          <th>Subject</th>
          <th>Category</th>
          <th>Severity</th>
          <th>From</th>
          <th>Assigned To</th>
          <th>Created On</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var ticket in Model.Tickets)
        {
          <tr onclick="window.location='/tickets/details/@ticket.Id'">
            <td>@ticket.TicketNumber</td>
            <td>@ticket.Subject</td>
            <td>@ticket.CategoryText</td>
            <td>@ticket.SeverityText</td>
            <td>@ticket.From</td>
            <td>@ticket.AssignedTo</td>
            <td>@ticket.CreatedOn</td>
            <td><a asp-page="/tickets/edit" asp-route-ID="@ticket.Id" ><i class="fa fa-edit fa-lg"></i></a></td>
          </tr>
        }
      </tbody>
    </table>

  </section>